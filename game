import wollok.game.*
import obj.*

const heroe = new Heroe()
const Oleada = new Oleadas()


program juego {
	game.width(30)
    game.height(16)
    game.boardGround("fondo.jpg")
    game.title("dungeon :V")
    Oleada.crear_enemigos()
    Oleada.cant_enemigos().forEach{n => game.addVisual(n)}
    Oleada.cant_enemigos().forEach{n => game.onTick(1600.randomUpTo(2100), 'moverse', {n.seguir(heroe); n.evitar()})}
    game.addVisualCharacter(heroe)
    
    game.onCollideDo(heroe, {enemigo => 
    	enemigo.ataque(heroe)
    })
	
    keyboard.h().onPressDo{heroe.aumentar_estamina(); game.say(heroe, "estamina " + heroe.estamina())}
    keyboard.g().onPressDo{ game.say(heroe, "Vida:" + heroe.vida())}
	//game.onTick(1500, 'seguirlos',{=> Oleada.cant_enemigos().forEach{n => n.seguir(heroe) ; n.evitar()}})
    game.start()
}
